{
  "name": "nos2x",
  "description": "Nostr Signer Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.build.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "content-script.build.js"
    ]
  }],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": ["nostr-provider.js"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
